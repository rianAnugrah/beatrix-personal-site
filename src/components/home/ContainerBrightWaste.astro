
---
import { Image } from "astro:assets";

import scMobile from "../../assets/Container-Brightwaste-m.png"; // Make sure to add your image to this path
import scDesktop from "../../assets/Container-BrightWaste.png"; // Make sure to add your image to this path
import scTablet from "../../assets/Container-BrightWaste-t.png"; // Make sure to add your image to this path
import Heading from "../Heading.astro";
import Pile from "../Pile.astro";

const title = "BrightWaste";
const desc1  = `ðŸ¥³ Courier Hacks: First and Public Favorite Winner ðŸ¥³`
const desc2  = `A sustainable marketplace website that offers users the option to either sell used items or upcycle them.`
---

<section class="relative flex flex-col w-full lg:h-[30rem]  group bg-[#dae3de]">
  <Image
    src={scDesktop}
    alt="Savicore image-co"
    class="hidden  w-auto mx-auto h-full relative   z-[1]  "
  />

  <Image
    src={scTablet}
    alt="Savicore image-co"
    class="hidden lg:block  mx-auto relative w-auto h-full z-[1]"
  />


  <div class="hidden lg:block  absolute w-[14rem] h-[14rem] -bottom-[8rem] left-[calc(50%_+_22rem)] rounded-full z-[0] bg-[#469D8C]">
  </div>
  <Image
    src={scMobile}
    alt="Savicore image-co"
    class="block lg:hidden w-full h-full"
  />

  <div
    class="hidden absolute w-[22rem]  top-1/2 lg:left-[calc(50%_+_2rem)]    z-[2] -translate-y-1/2 lg:flex flex-col items-start justify-center gap-0 "
  >
    <div class="flex gap-4">
      <Pile text="Web" />
      <Pile text="UX Design" />
      <Pile text="UX Writing" />
    </div>
    <div class="">
      <h2
        class={`text-left w-full text-[2rem]  font-bold leading-[2rem] mb-3 mt-6`}
        style="font-family: 'Playfair Display', serif;"
      >
        {title}
      </h2>
    </div>
    <p class="font-bold font-playfair w-full text-[1.25rem] mb-2" style="font-family: 'Playfair Display', serif;">
      {desc1}
    </p>
    <p class="italic w-full  ">
      {desc2}
    </p>
  </div>



</section>
<div
    class="lg:hidden flex flex-col items-start p-[6%] gap-2 mb-[15%]"
>
  <div class="flex gap-4 text-[#5B3EFF] font-playfair">
    Web | UX Design | UX Writing
  </div>
  <div class="text-left">
    <h2
        class={`text-left w-full text-[2rem]  font-bold leading-[3rem] `}
        style="font-family: 'Playfair Display', serif;"
    >
      {title}
    </h2>
  </div>
  <p class="font-bold  text-[1.74rem] w-full text-xl text-left" style="font-family: 'Playfair Display', serif;">
    {desc1}
  </p>
  <p class="italic w-full text-xl text-left">
    {desc2}
  </p>
</div>
