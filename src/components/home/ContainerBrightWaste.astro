
---
import { Image } from "astro:assets";

import scMobile from "../../assets/Container-Brightwaste-m.png"; // Make sure to add your image to this path
import scDesktop from "../../assets/Container-BrightWaste.png"; // Make sure to add your image to this path
import scTablet from "../../assets/Container-BrightWaste-t.png"; // Make sure to add your image to this path
import Heading from "../Heading.astro";
import Pile from "../Pile.astro";

const title = "BrightWaste";
const desc1  = `ðŸ¥³ Courier Hacks: First and Public Favorite Winner ðŸ¥³`
const desc2  = `A sustainable marketplace website that offers users the option to either sell used items or upcycle them.`
---

<section class="relative flex flex-col w-full h-full group bg-[#469D8C]/25">
  <Image
    src={scDesktop}
    alt="Savicore image-co"
    class="hidden xl:block w-full h-full   group-hover:scale-100 transition-all duration-500 ease-out"
  />

  <Image
    src={scTablet}
    alt="Savicore image-co"
    class="hidden lg:block xl:hidden w-full h-full"
  />

  <Image
    src={scMobile}
    alt="Savicore image-co"
    class="block lg:hidden w-full h-full"
  />

  <div
    class="hidden xl:pl-[4%] xl:pr-0 pl-0 pr-[4%] absolute w-2/5 right-0 xl:left-0 top-1/2 -translate-y-1/2 lg:flex flex-col items-start justify-center gap-4"
  >
    <div class="flex gap-4">
      <Pile text="Web" />
      <Pile text="UX Design" />
      <Pile text="UX Writing" />
    </div>
    <div class="">
      <Heading text={title} />
    </div>
    <p class="font-bold font-playfair text-[1.75rem] w-full text-xl ">
      {desc1}
    </p>
    <p class="italic w-full text-xl ">
      {desc2}
    </p>
  </div>

  <div
  class="lg:hidden flex flex-col items-start p-[6%] gap-2 mb-[15%]"
>
  <div class="flex gap-4 text-[#5B3EFF] font-playfair">
    Web | UX Design | UX Writing
  </div>
  <div class="text-left">
    <Heading text={title} />
  </div>
  <p class="font-bold font-playfair text-[1.74rem] w-full text-xl text-left">
    {desc1}
  </p>
  <p class="italic w-full text-xl text-left">
    {desc2}
  </p>
</div>


</section>
